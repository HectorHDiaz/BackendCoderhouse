<div class="jumbotron container mt-3">
    <form action="/api/auth/login" method="post" id="loginForm">
        <h3>Ingrese:</h3>
        <label for="userEmail">Email</label>
        <input type="email" name="userEmail" class="form-control">
        <label for="password">Contraseña</label>
        <input type="password" name="password" class="form-control">
        <input type="submit" value=" Ingresar! " class="btn btn-success">
    </form>

    <form action="/api/auth/register" method="post" id="registerForm">
        <h3>Registrese:</h3>
        <label for="userEmail">Email</label>
        <input type="email" name="userEmail" class="form-control">
        <label for="password">Contraseña</label>
        <input type="password" name="password" class="form-control">
        <input type="submit" value="Confirmar" class="btn btn-success">
    </form>
    <div class="d-flex flex-row-reverse">
        <button class="btn btn-primary " id="toggleBtn">Registrarse!</button>
    </div>
</div>
<script>
    let choice = true;
    const loginForm = document.getElementById('loginForm')
    const registerForm = document.getElementById('registerForm')
    const toggleBtn = document.getElementById('toggleBtn')

    loginForm.hidden = false
    registerForm.hidden = true

    toggleBtn.addEventListener('click', toggleBox)

    function toggleBox(){
        if(choice){
            loginForm.hidden = true
            registerForm.hidden = false
            toggleBtn.textContent = 'Loguearse'
            choice = false
        }else{
            loginForm.hidden = false
            registerForm.hidden = true
            toggleBtn.textContent = 'Registrase'
            choice = true
        }
    }
    
</script>
</div>