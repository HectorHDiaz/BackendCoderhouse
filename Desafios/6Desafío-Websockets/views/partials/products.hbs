
<h3 style="margin-top: 2em;">Productos</h3>
    {{#if products.length}}
    <div>
        <table class="table table-dark" id="productTable">
            <tr class="text-warning">
                <th>Titulo</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
                {{#each products}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{price}}</td>
                    <td><img style="width: 100px;" src={{thumbnail}} alt={{title}}> </td>
                </tr>
                {{/each}}
        </table>
    </div>
    {{/if}}
    {{#unless products.length}}
    <h3 class="alert alert-danger">No se encuentran datos.</h3>
    {{/unless}}